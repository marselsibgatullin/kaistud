{
  "compilerOptions": {
    "lib": [
      "ES6",
      "DOM",
      "DOM.Iterable",
      "ScriptHost",
    ],
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "removeComments": true,
    "baseUrl": "./src",
    "rootDir": "./src",
  },
  "include": [
    "./src"
  ],
}